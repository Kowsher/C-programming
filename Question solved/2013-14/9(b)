#include<stdio.h>


int main(){
  char ch[]="CProgramming";

  for(int i=0; i<12; i++)
  {
      for(int j=0; j<=i; j++)
      {
          printf("%c", ch[j]);
      }
      printf("\n");
  }
   for(int i=11; i>=0; i--)
  {

      for(int j=0; j<=i; j++)
      {
          printf("%c", ch[j]);
      }
      printf("\n");
  }

  return 0;
}
